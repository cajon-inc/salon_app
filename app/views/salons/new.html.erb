 <div class="row">
  <%= render 'salon_top_menu' %>

  <main role="main" class="col-md-9 ml-sm-auto">
    <div class="card">
      <div class="card-header">
        店舗基本情報入力
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>店舗名</label>
              <%= f.text_field :shop_name, id: "shop_name", class: "form-control" %>
            </div>
            <div><%= f.submit "登録", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>


