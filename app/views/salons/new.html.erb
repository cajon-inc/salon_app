 <div class="row">

  <main role="main" class="col-md-10 mx-sm-auto">
    <div class="card">
      <div class="card-header">
        店舗基本情報入力
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>店舗名</label>
              <%= f.text_field :shop_name, id: "shop_name", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>電話番号</label>
              <%= f.text_field :tel, id: "tel", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>電話番号（スマホ）＊ハイフンなし</label>
              <%= f.text_field :tel_sp, id: "tel_sp", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>営業時間</label>
              <%= f.text_area :hour, id: "hour", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>定休日</label>
              <%= f.text_area :holiday, id: "holiday", class: "form-control" %>
            </div>
            <div><%= f.submit "登録", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>


