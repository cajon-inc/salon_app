<div class="row">
  <%= render 'salon_top_menu' %>

  <main role="main" class="col-md-9 ml-sm-auto">
    <div class="card">
      <div class="card-header">
        各リンク先入力
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>予約</label>
              <%= f.text_field :reserve, id: "reserve", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Facebook</label>
              <%= f.text_field :facebook, id: "facebook", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Instagram</label>
              <%= f.text_field :instagram, id: "instagram", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Hotpepper</label>
              <%= f.text_field :hotpepper, id: "hotpepper", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Hotpepper</label>
              <%= f.text_field :hotpepper, id: "hotpepper", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>YouTube</label>
              <%= f.text_field :youtube, id: "youtube", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>BLOG</label>
              <%= f.text_field :blog, id: "blog", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>公式サイト</label>
              <%= f.text_field :site, id: "site", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>採用サイト</label>
              <%= f.text_field :recruit, id: "recruit", class: "form-control" %>
            </div>
            <div><%= f.submit "保存", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>