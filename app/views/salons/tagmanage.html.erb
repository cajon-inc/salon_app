<div class="row">
  <%= render 'salon_top_menu' %>

  <main role="main" class="col-md-9 ml-sm-auto">
    <div class="card">
      <div class="card-header">
        タグ関連
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>リマーケタグ</label>
              <%= f.text_area :retargeting, id: "retargeting", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Googleタグマネージャー（head）</label>
              <%= f.text_area :gtm_head, id: "gtm_head", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Googleタグマネージャー（body）</label>
              <%= f.text_area :gtm_body, id: "gtm_body", class: "form-control" %>
            </div>
            <div><%= f.submit "保存", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>