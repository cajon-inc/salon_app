<div class="row">
  <%= render 'salon_top_menu' %>

  <main role="main" class="col-md-9 ml-sm-auto">
    <div class="card">
      <div class="card-header">
        アクセス情報
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>住所</label>
              <%= f.text_field :address, id: "address", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>アクセス</label>
              <%= f.text_area :access, id: "access", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>マップ</label>
              <%= f.text_field :map, id: "map", class: "form-control" %>
            </div>
            <div><%= f.submit "保存", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>