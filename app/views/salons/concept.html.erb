<div class="row">
  <%= render 'salon_top_menu' %>

  <main role="main" class="col-md-9 ml-sm-auto">
    <div class="card">
      <div class="card-header">
        コンセプト
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>こだわり1 タイトル</label>
              <%= f.text_field :concept1_title, id: "concept1_title", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり1　画像</label>
              <%= f.file_field :concept1_image, id: "concept1_image", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり1　説明文</label>
              <%= f.text_area :concept1, id: "concept1", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり2 タイトル</label>
              <%= f.text_field :concept2_title, id: "concept2_title", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり2　画像</label>
              <%= f.file_field :concept2_image, id: "concept2_image", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり2　説明文</label>
              <%= f.text_area :concept2, id: "concept2", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり3 タイトル</label>
              <%= f.text_field :concept3_title, id: "concept3_title", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり3　画像</label>
              <%= f.file_field :concept3_image, id: "concept3_image", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>こだわり3　説明文</label>
              <%= f.text_area :concept3, id: "concept3", class: "form-control" %>
            </div>
            <div><%= f.submit "保存", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>


