<div class="row">
  <%= render 'salon_top_menu' %>

  <main role="main" class="col-md-9 ml-sm-auto">
    <div class="card">
      <div class="card-header">
        店舗サブ情報入力
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @salon do |f| %>
            <div class="form-group">
              <label>トップキャッチ</label>
              <%= f.text_field :top_catch, id: "top_catch", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>ナビ　ロゴ　* png形式</label>
              <%= f.file_field :nav_logo, id: "nav_logo", class: "form-control" %>
              <%= link_to '削除', @salon.nav_logo.purge, class: "rm_image_btn float-right" %>
            </div>
            <div class="form-group">
              <label>ロゴ</label>
              <%= f.file_field :logo, id: "logo", class: "form-control" %>
              <%= link_to '削除', @salon.logo.purge, class: "rm_image_btn float-right" %>
            </div>
            <div class="form-group">
              <label>フッターロゴ</label>
              <%= f.file_field :footer_logo, id: "footer_logo", class: "form-control" %>
              <%= link_to '削除', @salon.footer_logo.purge, class: "rm_image_btn float-right" %>
            </div>
            <div class="form-group">
              <label>Youtube ID</label>
              <%= f.text_field :youtube_id, id: "youtube_id", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>店内写真</label>
              <%= f.file_field :store_photo, id: "store_photo", class: "form-control" %>
              <%= link_to '削除', @salon.store_photo.purge, class: "rm_image_btn float-right" %>
            </div>
            <div class="form-group">
              <label>著作権表記</label>
              <%= f.text_field :copy, id: "copy", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>クレジットカード</label>
              <div class="row">
                <div class="col-md-4">
                  <%= f.check_box :is_visa %>　VISA
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_master %>　Master
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_jcb %>　JCB
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <%= f.check_box :is_amex %>　Amex
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_diners %>　Diners
                </div>
                <div class="col-md-4">
                  <%= f.check_box :is_union %>　Union
                </div>
              </div>
            </div>
            <hr />
            <div class="text-center"><%= f.submit "保存", class: "btn btn-primary btn-lg" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>